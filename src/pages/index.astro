---
import MainLayout from '../layouts/MainLayout.astro';
import Loader from '../components/UI/Loader.astro';
import Interface from '../components/UI/Interface.astro';
import PilotForm from '../components/UI/PilotForm.jsx';
---

<MainLayout 
  title="AT Studio | In Arrivo Aprile 2026"
  description="Agenzia creativa del futuro in lancio il 1 Aprile 2026. Candidati al programma pilot."
>
  <!-- Loader -->
  <Loader />
  
  <!-- Interface Overlay -->
  <Interface />
  
  <!-- Hidden form for Netlify Forms detection -->
  <form name="pilot-application" netlify netlify-honeypot="bot-field" hidden>
    <input type="text" name="name" />
    <input type="email" name="email" />
    <input type="text" name="company" />
    <input type="url" name="website" />
    <textarea name="details"></textarea>
  </form>

  <!-- Pilot Form Modal (React) -->
  <PilotForm client:only="react" />
  
  <!-- Spacer for scroll (solo desktop) -->
  <div class="hidden lg:block h-[600vh]"></div>
</MainLayout>
